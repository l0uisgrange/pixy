{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"strict": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "bundler",
	},
	"include": ["src/**/*"]
}
